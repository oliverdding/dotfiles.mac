{
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh",
                "bash"
            ]
        },
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": [
                "cmake"
            ],
            "rootPatterns": [
                "build/"
            ],
            "initializationOptions": {
                "buildDirectory": "build"
            }
        },
        "go": {
            "command": "gopls",
            "args": [
                "serve",
                "-debug",
                "0.0.0.0:8484",
                "-rpc.trace"
            ],
            "rootPatterns": [
                "go.mod"
            ],
            "trace.server": "verbose",
            "filetypes": [
                "go"
            ]
        },
        "rust": {
            "command": "rust-analyzer",
            "filetypes": [
                "rust"
            ],
            "rootPatterns": [
                "Cargo.toml"
            ]
        }
    },
    "explorer": {
        "icon": {
            "enableNerdfont": "true",
            "expanded": "",
            "collapsed": "",
            "selected": "",
            "hidden": "﬒"
        },
        "position": "right"
    }
}